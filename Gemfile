source "https://rubygems.org"

ruby "3.1.2"
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'

# Framework and Web Server
gem "rails", "~> 7.0.8"
gem "puma", "~> 5.0"

# Database
gem "sqlite3", "~> 1.4"

# Frontend Assets
gem "importmap-rails"
gem "stimulus-rails"
gem "jbuilder"

# User Authentication and Authorization
gem "devise"

# User Profile and Contact Form Models
gem "activerecord"

# Security
gem "bootsnap", require: false

# Development and Testing
group :development, :test do
  gem "debug", platforms: %i[ mri mingw x64_mingw ]
  gem "web-console"
end

group :test do
  gem "capybara"
  gem "selenium-webdriver"
end
